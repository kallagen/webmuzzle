@model AuthLoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/lib/adminlte/dist/css/AdminLTE.min.css" />
    <link rel="stylesheet" href="~/lib/adminlte/dist/css/skins/skin-blue-light.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700">
</head>
<body class="hold-transition login-page">
    @using (Html.BeginForm("Login", "Auth", FormMethod.Post, new { @id = "auth-form", autocomplete = "off" }))
    {
        <div class="login-box">
            <div class="login-logo">УЧЕТ <b>СУ5Д</b></div>
            <div class="login-box-body">
                <p class="login-box-msg">Укажите данные для входа в систему</p>
                <form action="../../index2.html" method="post">
                    <div class="form-group has-feedback">
                        @Html.TextBoxFor(m => m.Login, new { @class = "form-control", placeholder = "Р›РѕРіРёРЅ" })
                        <span class="glyphicon glyphicon-user form-control-feedback"></span>
                    </div>
                    <div class="form-group has-feedback">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "РџР°СЂРѕР»СЊ" })
                        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    </div>
                    <div class="text-center">
                        <div class="row">
                            <button type="submit" class="btn btn-primary btn-flat">Войти</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    }
</body>
</html> 