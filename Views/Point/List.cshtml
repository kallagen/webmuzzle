@model SearchViewModel<Point>
@{
    ViewBag.Title = "Настройка объектов";
}

<div class="row">
    <div class="row">
        <div class="col-md-3">
            @Html.ActionLink("Добавить объект", "Create", "Point", null, new { @class = "btn bg-blue btn-block margin-bottom" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            @if (!Model.HasData)
            {
                <h4>ничего не найдено</h4>
            }
            else
            {
                <div class="box box-solid">
                    <div class="box-body table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th class="text-center">Название</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Data)
                                {
                                    <tr>
                                        <td>@Html.ActionLink(item.Name, "Edit", "Point", new { pointGuid = item.PointGuid }, null)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
@Html.ViewModelWindow()