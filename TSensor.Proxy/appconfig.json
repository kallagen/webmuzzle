{
  // идентификатор устройства
  "deviceGuid": "00001",

  // режим логирования error или debug
  "loggerType": "error",
  // максимальный размер файла с логами, кбайты
  "maxErrorFileSize": 1000,

  // источник получения данных tcp или com
  "inputMode": "tcp",
  // список портов для получения данных
  // если необходимо использовать все доступные порты в com режиме, то оставить пустой массив "portList": [ ]
  // пример в com режиме "portList": [
  // "/dev/ttyUSB16",
  // "COM3" ],
  // в tcp режиме можно указать в том числе интервал
  // пример в tcp режиме "portList": [
  // 8081,
  // "8082",
  // "8083-8085" ],
  "portList": [
    8081,
    "8082",
    "8083-8085"
  ],

  // цель для обработанных данных api или file
  "outputMode": "api",
  // адрес api
  "apiHost": "80.76.40.56:8081",

  // максимальный размер файла с данными в режиме file (а также архивными в режиме api), кбайты
  "maxArchiveFileSize": 100,
  // интервал рассылки архивных данных в режиме api
  "archiveSendInterval": 300
}