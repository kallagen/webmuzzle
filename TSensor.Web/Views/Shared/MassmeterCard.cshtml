@model TSensor.Web.Models.Entity.TankSensorValue
@{
    var cellClass = Model.IsError ? "t-error" : (Model.IsWarning ? "t-warning" : "t-normal");
    var guid = Model.MainSensorGuid;

    var mainClass = Model.IsError ? "text-red" : (Model.IsWarning ? "text-yellow" : string.Empty);
}

<div class="t-cell @cellClass" data-sensorguid="@guid">
    <h5><a href="@Url.Action("MassmeterDetails", "Tank", new { guid = Model.TankGuid })"><span>@Model.PointName @Model.TankName<i class="tank-header-icon fa fa-tint @mainClass" data-sensorguid="@guid"></i></span></a></h5>
    <h6><span data-sensorguid="@guid">@Model.MainSensorInsertDateStr</span></h6>
    <div>
        <div class="bl2">
            <div>
                <div class="tank-level" style="height: @Model.EnvironmentComposition%"></div>
            </div>
        </div>
        <div class="bl3">
            <span><span class="t-label t-img-volume">Объём</span><span class="t-environmentVolume">@Model.EnvironmentVolume.ToString().Replace(",", ".")</span> л</span>
            <span><span class="t-label t-img-weight">Масса, общий</span><span class="t-liquidEnvironmentLevel">@Model.LiquidEnvironmentLevel.ToString().Replace(",", ".")</span> кг</span>
            <span><span class="t-label t-img-weight">Масса, текущий</span><span class="t-steamMass">@Model.SteamMass.ToString().Replace(",", ".")</span> кг</span>
            <span><span class="t-label t-img-density">Плотность</span><span class="t-liquidDensity">@Model.LiquidDensity.ToString().Replace(",", ".")</span> кг/м³</span>
            <span><span class="t-label t-img-temperature">Температура</span><span class="t-t1">@Model.T1.ToString().Replace(",", ".")</span> °C</span>
        </div>
        <div class="bl-error"></div>
    </div>
</div>